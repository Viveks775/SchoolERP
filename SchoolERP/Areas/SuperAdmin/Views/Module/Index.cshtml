
@{
    ViewBag.Title = "ModuleMaster";
    Layout = "~/Areas/SuperAdmin/Views/Shared/MasterLayout.cshtml";
}




<html lang="en" class="no-js">

<body ng-app="ERP">
    @using System.Configuration;
    <div ng-controller="ModuleController">
        <form id="frmCRUD" name="form" class="m-form m-form--fit m-form--label-align-right student-admission-wrapper" ng-init="Initialize()">
            <div class="m-portlet m-portlet--tab">

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Module Master
                                </h3>
                            </div>
                        </div>

                    </div>

                </div>



                <div ng-show="IsVisible">
                    <div class="m-portlet__body">

                        <div class="form-body">
                            <div class="form-group m-form__group">
                                <label>
                                   Module Name
                                    <span class="required"> * </span>
                                </label>

                                <input type="text" value={{ModuleName}} ng-model="ModuleName" name="ModuleName" class="form-control" required />
                                <input type="hidden" value="{{ModuleId}}" />
                                @*<input type="hidden" value="{{Expr1}}" />*@
                            </div>
                            <div class="form-group m-form__group">
                                <label>
                                   Module Order
                                </label>

                                <input type="text" value={{ModuleOrder}} ng-model="ModuleOrder" name="ModuleOrder" class="form-control" required />


                            </div>


                        </div>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions">



                            <button class="btn btn-success " ng-show="btnUpdate" ng-click="AddUpdate(ModuleId,ModuleName,ModuleOrder)">
                                <i class="fa fa-database"> </i>Update
                            </button>
                            <button class="btn default" ng-click="Clear()">
                                <i class="fa fa-times"> </i> Cancel
                            </button>


                        </div>
                    </div>


                    <!--end::Form-->
                </div>

                <div class="m-portlet__body">
                    <select class="form-control col-md-2" style="float: right;" ng-model="btnactive" ng-change="Initialize()">
                        <option ng-selected="true">Active</option>
                        <option>Deactive</option>
                    </select>
                    <p style="color:red">{{msg}}</p>

                    <table datatable="ng" class="table table-striped- table-bordered  " id="atable">
                        <thead>
                            <tr>
                                <th>Module Id</th>
                                <th>Module Name</th>
                                <th>Module Order</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in Students">
                                <td>
                                    {{data.ModuleId}}
                                </td>
                                <td>
                                    {{data.ModuleName}}
                                </td>
                                <td>
                                    {{data.ModuleOrder}}
                                </td>
                                <td>
                                    {{data.CreatedDate}}
                                </td>
                              
                                <td><input type="button" class="btn btn-primary" value="Edit" ng-click="ShowHide(data.ModuleId)" /></td>
                                <td>
                                    <span class="m-switch m-switch--icon m-switch--danger">
                                        <label>
                                            <input type="checkbox" ng-show="chkStatus" ng-checked="{{data.Status}}" ng-click="Delete(data.ModuleId)">
                                            <span></span>
                                        </label>
                                    </span>
                                </td>

                            </tr>


                        </tbody>
                    </table> 
                </div>
            </div>
        </form>
    </div>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Scripts/ProjectScripts/Module/Module.js")"></script>
    <script src="@Url.Content("~/Scripts/CommonScript/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Scripts/ProjectScripts/Module/ModuleController.js")" type="text/javascript"></script>

    <script src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>



  
    
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
</body>
</html>


