@using System.Configuration;


<!-- end::Head -->
<!-- begin::Body -->
<body ng-app="ERP" class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" ng-controller="ForgetPassController" style="background-image: url(../Content/assets/app/media/img//bg/bg-3.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo">
                        <a href="#">
                            <img class="img-fluid" src="~/Content/assets/images/webesk_logo.png" alt="">
                        </a>
                    </div>

                    <div>
                        <div class="m-login__head">
                            <h3 class="m-login__title">Forgotten Password ?</h3>
                            <div class="m-login__desc">Enter your contact no to receive your password:</div>
                        </div>
                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Contact Number" name="Contact" id="Contact" autocomplete="off" title="Enter Should be valid Email ID" ng-model="ContactNumber" required>
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_forget_password_submit" ng-click="Verify()" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">Request</button>&nbsp;&nbsp;
                                <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">Cancel</button>
                            </div>
                        </form>
                    </div>
                    <div class="m-login__account">
                        <span class="m-login__account-msg">
                            Don't have an account yet ?
                        </span>&nbsp;&nbsp;
                        <a href="javascript:;" id="m_login_signup" class="m-link m-link--light m-login__account-link">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScripts/Login/LoginModule.js")"></script>
    <script src="@Url.Content("~/Scripts/CommonScript/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScripts/Login/ForgetPassword.js")" type="text/javascript"></script>
    <!-- end:: Page -->
    <!--begin::Global Theme Bundle -->
    <script src="~/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
