
@{
    Layout = null;
    Layout = "~/Areas/SuperAdmin/Views/Shared/MasterLayout.cshtml";
}

<!DOCTYPE html>


<html lang="en">

<!-- begin::Head -->
<head>
    <script src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/assets/demo/demo12/custom/crud/forms/widgets/form-repeater.js"></script>

</head>
@using System.Configuration;


<!-- end::Head -->
<!-- begin::Body -->
<body ng-app="ERP" class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    
    <!-- END: Subheader -->

    <div class="m-content" ng-controller="MenuSubMenuController">
        <div ng-show="IsVisible">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Portlet-->
                    <div class="m-portlet m-portlet--accent m-portlet--head-solid-bg m-portlet--head-sm" m-portlet="true" id="m_portlet_tools_1">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <h3 class="m-portlet__head-text">
                                        Add Role
                                    </h3>
                                </div>
                            </div>

                        </div>
                        <div class="row d-block m-0 mt-1 form-block-wrapper">
                            <form class="m-form m-form--fit m-form--label-align-right" id="Form1" name="Form1">
                                <div class="m-portlet__body">

                                    <div class="form-group m-form__group row">
                                        <label for="example-text-input" class="col-xl-3 col-lg-2 col-md-3 col-sm-12 col-form-label">ROLE NAME<span class="required-star">*</span></label>
                                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                            <input class="form-control m-input" type="text" placeholder="Role Name" name="Role" id="Role" autocomplete="off" ng-model="Role" value="{{Role}}" >
                                            <input type="hidden" ng-model="RoleId" value={{RoleId}} name="RoleId" class="form-control" />

                                        </div>
                                    </div>
                                    <div class="form-group m-form__group row">
                                        <label for="example-text-input" class="col-xl-3 col-lg-2 col-md-3 col-sm-12 col-form-label"> SELECT MENU<span class="required-star">*</span></label>
                                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                            <div id="m_tree_3" class="tree-demo">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="m-portlet__foot">
                                    <p style="color:red">{{DuplicateMsg}}</p>
                                    <div class="row m-0 justify-content-end">
                                        <button class="btn btn-primary"  ng-show="btnSave" ng-click="postdata(Role)">
                                            <i class="fa fa-save"> </i>   Save
                                        </button>

                                        <button class="btn btn-danger" ng-show="btnUpdate"  ng-click="UpdateTreeData(Role,RoleId)">
                                            <i class="fa fa-database"> </i>Update
                                        </button>


                                        <button class="btn btn-secondary" ng-click="Cancel()">
                                            <i class="fa fa-times"> </i>  Cancel
                                        </button>


                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Portlet-->

        <div class="m-portlet m-portlet--mobile" ng-init="Initialize()">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Role Master
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a ng-click="Show()" class="btn btn-outline-info m-btn m-btn--icon">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>New Role</span>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <p style="color:red">{{msg}}</p>
                <div class="row d-block m-0 mt-1">
                    <!--begin: Datatable -->
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="section_table_view">
                        <thead>
                            <tr>


                                <th>Role Id</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in RoleData">

                                <td>
                                    {{data.RoleId}}
                                </td>
                                <td>
                                    {{data.Role}}
                                </td>


                                <td>

                                    <div class="action-link">

                                        <a class="edit-icon" href="javascript:void(0);" data-toggle="m-tooltip" title="Edit">
                                            <i class="fa fa-edit   btnEdit" value="Edit" ng-click="GetSingleMenuSubMenu(data.RoleId,data.Role)" title="Edit"></i>
                                        </a>
                                    </div>
                                </td>


                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
    <script src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Scripts/ProjectScripts/MenuSubMenu/MenuSubMenuModule.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/CommonScript/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Scripts/ProjectScripts/MenuSubMenu/MenuSubMenuController.js")"></script>

    <!-- end:: Page -->
    <!--begin::Global Theme Bundle -->
    <script src="~/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/Content/assets/demo/demo12/base/scripts.bundle.js"></script>

    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />
    <!--end::Global Theme Bundle -->
    <!--begin::Page Scripts -->
    <!--end::Page Scripts -->
    </body>

<!-- end::Body -->
</html>